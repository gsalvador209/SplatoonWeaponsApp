<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextTitleBlitz" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/blitz_bold</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextSubtitleBlitz" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/blitz_bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextBodyBlitz" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/blitz_main</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextCaptionBlitz" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/blitz_main</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="TextAlternaBlitz" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/sp_alterna_regular</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

</resources>
